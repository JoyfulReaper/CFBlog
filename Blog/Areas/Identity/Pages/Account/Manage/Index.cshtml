@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
    ViewData["MainText"] = "Manage Account";
    ViewData["SubText"] = "Profile";
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Username" class="form-control" disabled placeholder="Username" />
                <label asp-for="Username"></label>
            </div>
            <div class="form-floating">
                <input asp-for="Input.DisplayName" class="form-control" placeholder="Display Name" />
                <label asp-for="Input.DisplayName"></label>
            </div>
            <div class="form-floating">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Phone Number" />
                <label asp-for="Input.PhoneNumber"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="Input.Image">Select Image</label>
                <input type="file" asp-for="Input.Image" class="form-control" accept=".jpg,.png,.webp,.gif,.jpeg" />
                <span asp-validation-for="Input.Image" class="text-danger"></span>
            </div>

            <button id="update-profile-button" type="submit" class="btn btn-dark mb-3 mt-3 btn-sm">Save</button>
        </form>
    </div>
    <div class="col-md-6">
        <img src="@Model.CurrentImage" class="img-fluid rounded-circle" width="50%" />
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}